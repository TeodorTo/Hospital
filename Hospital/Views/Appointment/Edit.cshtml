@model Hospital.Models.AppointmentEditViewModel

<h2>Edit Appointment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="DateTime" class="control-label"></label>
        <input asp-for="DateTime" class="form-control" />
        <span asp-validation-for="DateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PatientId" class="control-label"></label>
        <select asp-for="PatientId" class="form-control" asp-items="@Model.Patients.Select(p => new SelectListItem { Value = p.Id.ToString(), Text = p.Name })"></select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoctorId" class="control-label"></label>
        <select asp-for="DoctorId" class="form-control" asp-items="@Model.Doctors.Select(d => new SelectListItem { Value = d.DoctorId.ToString(), Text = d.Name })"></select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AppointmentTypeId" class="control-label"></label>
        <select asp-for="AppointmentTypeId" class="form-control" asp-items="@Model.AppointmentTypes.Select(t => new SelectListItem { Value = t.AppointmentTypeId.ToString(), Text = t.Name })"></select>
        <span asp-validation-for="AppointmentTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AppointmentStatusId" class="control-label"></label>
        <select asp-for="AppointmentStatusId" class="form-control" asp-items="@Model.AppointmentStatuses.Select(s => new SelectListItem { Value = s.AppointmentStatusId.ToString(), Text = s.Name })"></select>
        <span asp-validation-for="AppointmentStatusId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Reason" class="control-label"></label>
        <input asp-for="Reason" class="form-control" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

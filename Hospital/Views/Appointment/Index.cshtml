@model IEnumerable<Hospital.Models.AppointmentViewModel>

<h2>Appointment List</h2>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-success">Add Appointment</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Date and Time</th>
        <th>Patient Name</th>
        <th>Doctor Name</th>
        <th>Appointment Type</th>
        <th>Appointment Status</th>
        <th>Reason</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var appointment in Model)
    {
    <tr>
        <td>@appointment.Id</td>
        <td>@appointment.DateTime.ToString("MM/dd/yyyy HH:mm")</td>
        <td>@appointment.PatientName</td>
        <td>@appointment.DoctorName</td>
        <td>@appointment.AppointmentType</td>
        <td>@appointment.AppointmentStatus</td>
        <td>@appointment.Reason</td>
        <td>
            <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-info btn-sm">Details</a>
            <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-primary btn-sm">Edit</a>
            <form asp-action="Delete" asp-route-id="@appointment.Id" method="post" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>

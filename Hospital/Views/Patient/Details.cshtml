@model Hospital.Models.PatientViewModel

<h2>Patient Details</h2>

<div>
    <h4>Patient Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Medical History</dt>
        <dd class="col-sm-10">@Model.MedicalHistory</dd>

        <dt class="col-sm-2">Additional Information</dt>
        <dd class="col-sm-10">@Model.AdditionalInformation</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-primary">Back to List</a>

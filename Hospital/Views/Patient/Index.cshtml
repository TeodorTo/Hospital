@model IEnumerable<Hospital.Models.PatientViewModel>

<h2>Patients List</h2>

<div class="text-end mb-3">
    <a asp-action="Add" class="btn btn-primary">Add Patient</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Medical History</th>
        <th>Additional Information</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var patient in Model)
    {
    <tr>
        <td>@patient.Id</td>
        <td>@patient.Name</td>
        <td>@patient.Age</td>
        <td>@patient.Gender</td>
        <td>@patient.Address</td>
        <td>@patient.PhoneNumber</td>
        <td>@patient.MedicalHistory</td>
        <td>@patient.AdditionalInformation</td>
        <td>
            <a asp-action="Details" asp-route-id="@patient.Id">Details</a> |
            <a asp-action="Edit" asp-route-id="@patient.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@patient.Id">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
